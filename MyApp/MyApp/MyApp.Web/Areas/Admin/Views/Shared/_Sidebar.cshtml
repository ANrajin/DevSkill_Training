@{
    var activeController = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
}

<div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/adminlte/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" class="d-block">Alexander Pierce</a>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <li class="nav-item">
                <a class="nav-link" is-active-route asp-area="Admin" asp-controller="Dashboard" asp-action="index">
                    <i class="nav-icon fas fa-th"></i>
                    <p>
                        Dashboard
                    </p>
                </a>
            </li>
            <li class="nav-item has-treeview @(activeController == "courses" ? "menu-open" : "")">
                <a href="#" class="nav-link @(activeController == "courses" ? "active" : "")">
                  <i class="nav-icon fas fa-th"></i>
                  <p>
                    Courses
                    <i class="right fas fa-angle-left"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview">
                  <li class="nav-item">
                    <a class="nav-link" is-active-route asp-area="Admin" asp-controller="Courses" asp-action="Index">
                        <i class="far fa-circle nav-icon"></i>
                        <p>
                            Manage Courses
                        </p>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" is-active-route asp-area="Admin" asp-controller="Courses" asp-action="Create">
                      <i class="far fa-circle nav-icon"></i>
                      <p>Create Course</p>
                    </a>
                  </li>
                </ul>
            </li>
            <li class="nav-item has-treeview @(activeController == "students" ? "menu-open" : "")">
                <a href="#" class="nav-link @(activeController == "students" ? "active" : "")">
                  <i class="nav-icon fas fa-th"></i>
                  <p>
                    Students
                    <i class="right fas fa-angle-left"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview">
                  <li class="nav-item">
                    <a class="nav-link" is-active-route asp-area="Admin" asp-controller="Students" asp-action="Index">
                        <i class="far fa-circle nav-icon"></i>
                        <p>
                            Manage Students
                        </p>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" is-active-route asp-area="Admin" asp-controller="Students" asp-action="Create">
                      <i class="far fa-circle nav-icon"></i>
                      <p>Add New Student</p>
                    </a>
                  </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" is-active-route asp-area="Admin" asp-controller="Enrolls" asp-action="Create">
                    <i class="nav-icon fas fa-th"></i>
                    <p>
                        New Enrollment
                    </p>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.sidebar-menu -->
</div>
